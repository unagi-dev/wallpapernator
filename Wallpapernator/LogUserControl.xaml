<UserControl x:Class="Wallpapernator.LogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wallpapernator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer Name="LogScrollViewer">
            <TextBlock 
                x:Name="txtLog" 
                TextWrapping="NoWrap" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                FontFamily="Consolas" 
                Foreground="White" 
                Background="#404040" >
                <TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="mnuLogClear"  Header="Clear" Click="mnuLogClear_Click" />
                        <MenuItem x:Name="mnuOpenLocation"  Header="Open location" Click="mnuOpenLocation_Click" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>
