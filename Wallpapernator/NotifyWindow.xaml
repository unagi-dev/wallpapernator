<Window
    x:Class="Wallpapernator.NotifyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Name="WallpaperNotification" Title="Wallpapernator Added" Width="300" Height="194" SizeToContent="Height"
  WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize" Top="-100">

    <Grid>
        <!-- Notification area -->
        <Border BorderThickness="0" Background="Black" BorderBrush="Black">
            <StackPanel Margin="0">
                <Image Name="imgBackground" Width="300" Height="169" />
                <Label Foreground="White" Content="Wallpaper added!"/>
            </StackPanel>
        </Border>
    </Grid>
    
</Window>